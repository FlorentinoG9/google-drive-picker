{
  "compilerOptions": {
    "target": "ES2022",
    "jsx": "preserve",
    "module": "CommonJS",
    "moduleResolution": "Node10",
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "declaration": true,
    "noEmit": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "isolatedModules": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
